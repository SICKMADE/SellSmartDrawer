<com.google.android.material.card.MaterialCardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="wrap_content"
  android:layout_margin="8dp">
  <LinearLayout android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/tvName" android:text="Category"
      android:textStyle="bold" android:textSize="16sp"
      android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvCount" android:text="0 items"
      android:layout_width="wrap_content" android:layout_height="wrap_content"/>
  </LinearLayout>
</com.google.android.material.card.MaterialCardView>
